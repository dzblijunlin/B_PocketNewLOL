<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--宽高 wrap-->
    <style name="WidthAndHeightWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--宽高 match-->
    <style name="WidthAndHeightMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--宽wrap 高match-->
    <style name="WidthWrapAndHeightMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--宽match 高wrap-->
    <style name="WidthMatchAndHeightWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--宽0 权重 1-->
    <style name="WidthZeroAndWightOne">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--高0 权重1-->
    <style name="HeightZeroAndWightOne">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--宽高水平-->
    <style name="WidthHeightHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--宽match 高0dp 权重1-->
    <style name="WidthMatchAndHeightZeroWeightOne">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!--宽match 高wrap 方向 水平-->
    <style name="WidthMatchHeightWrapHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--宽match 方向水平-->
    <style name="WidthMatchAndHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--宽wrap 高0dp 权重1-->
    <style name="WidthWrapAndHeightZeroWeightOne">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!--宽0dp 高match 权重1-->
    <style name="WidthZeroAndHeightMatchWeightOne">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--宽0dp 高wrap 权重1-->
    <style name="WidthZeroAndHeightWrapWeightOne">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>



    <!--分割线-->
    <style name="DivideLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#a9a1a1</item>
    </style>

</resources>
