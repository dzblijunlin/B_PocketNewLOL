<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="#fff"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/top_img"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/top_sName"
        android:layout_toRightOf="@+id/top_img"
        android:layout_margin="5dp"
        android:text="版本先看"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/top_iVideo"
        android:text="12"
        android:layout_below="@+id/top_sName"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/top_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/top_sName"
        android:layout_marginTop="5dp"
        android:text="个视频"
        android:layout_toRightOf="@+id/top_iVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/top_time"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/top_img"
        android:layout_margin="5dp"
        android:textColor="#f2b130"
        android:text="12月13日就是"
        android:maxEms="4"
        android:lines="1"
        android:ellipsize="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>