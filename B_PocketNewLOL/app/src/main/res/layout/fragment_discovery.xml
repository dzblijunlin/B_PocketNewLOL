<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:background="@mipmap/header_bg_big"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/discovery_title_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:alpha="00"
                    android:background="@mipmap/header_bg_small">

                    <ImageView
                        android:id="@+id/discovery_barcode_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/scan_normal" />

                    <TextView
                        android:id="@+id/discovery_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="发现"
                        android:textColor="#D3BF8D"
                        android:textSize="19sp" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/discovery_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/discovery_club_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_discovery_club"
                        android:drawableRight="@mipmap/arrow_right_yellow"
                        android:gravity="center_vertical"
                        android:text="  粉丝俱乐部"
                        android:textColor="#D2BE8C"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/discovery_hero_iv"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/discovery_hero_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="123"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/discovery_player_iv"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/discovery_player_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="123"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/discovery_near_iv"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/discovery_near_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="123"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#E3E4E4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="@dimen/dp_10">

                <ImageView
                    android:id="@+id/discovery_pk_iv"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/discovery_pk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="123"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F5F6F6" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="@dimen/dp_10">

                <ImageView
                    android:id="@+id/discovery_bar_iv"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/discovery_bar_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="123"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E2E2E2" />
            <com.naruto.b_pocketnewlol.discovery.MyExpandableListView
                android:id="@+id/expand_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indicatorLeft="328dp">

            </com.naruto.b_pocketnewlol.discovery.MyExpandableListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E2E2E2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="@dimen/dp_10">

                <ImageView
                    android:id="@+id/discovery_time_iv"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/discovery_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="123"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F5F6F6" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="@dimen/dp_10">

                <ImageView
                    android:id="@+id/discovery_picture_iv"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/discovery_picture_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="123"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>