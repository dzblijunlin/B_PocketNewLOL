<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.naruto.b_pocketnewlol.news.EventsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/header_bg_small">


        <ImageView
            android:id="@+id/event_acy_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/nav_back_normal" />

        <TextView
            android:id="@+id/event_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="赛事"
            android:textColor="#d3bf8d"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/event_acy_img_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/search_icon" />

        <ImageView
            android:id="@+id/scan"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/event_acy_img_find"
            android:src="@mipmap/scan_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/ev_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
