<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/two_img"
            android:src="@mipmap/b_a"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/two_title"
            android:layout_below="@+id/two_img"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试数据"
            android:textColor="#000"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/two_author"
            android:text="测试数据"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/two_title"/>

        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_below="@+id/two_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/two_author"
            android:layout_width="200dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/two_play"
                android:text="测试数字"
                android:textColor="#e49e43"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="播放"
                android:textColor="#eda03c"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>





    </RelativeLayout>


</LinearLayout>