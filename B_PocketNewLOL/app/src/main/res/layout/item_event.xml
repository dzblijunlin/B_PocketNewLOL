<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_event_img"
        android:layout_margin="10dp"
        android:src="@mipmap/eve"
        android:scaleType="fitXY"
        android:layout_width="130dp"
        android:layout_height="90dp" />

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/item_event_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_event_tv_title"
            android:text="EDG开始训练 无状态赶赴喊集训哈哈"
            android:textColor="#000"
            android:textSize="18sp"
            android:lines="1"
            android:maxEms="14"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_event_tv_summary"
            android:layout_marginTop="5dp"
            android:text="从整体实力来看，SKT、KT、SSG毫无疑问是纸面实力最强的。"
            android:textSize="15sp"
            android:lines="2"
            android:maxEms="9"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_event_tv_date"
            android:layout_marginTop="5dp"
            android:text="12月12日 11:02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>