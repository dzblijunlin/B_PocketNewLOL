<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/hero_img"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/hero_title"
        android:layout_below="@+id/hero_img"
        android:textSize="15sp"
        android:textColor="#000"
        android:text="2017LPL村级赛抽签仪式"
        android:lines="2"
        android:maxEms="9"
        android:ellipsize="end"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hero_author"
        android:text="LPL职业连飒"
        android:textColor="#fff"
        android:layout_above="@+id/hero_title"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/no"
        android:layout_below="@+id/hero_title"
        android:text="时间"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hero_play"
        android:gravity="right"
        android:layout_toRightOf="@+id/no"
        android:layout_below="@+id/hero_title"
        android:layout_margin="5dp"
        android:text="5.1万"
        android:textColor="#f7b43f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>